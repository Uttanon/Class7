%p#notice= notice
%p#alert= alert
%h1 Feed of #{@user.name} (id : #{@user.id})
.container
  .row
    .col
      -@allpost.each do |post|
        .d-flex.p-2.border.border-primary.rounded Username : #{User.find(post.user_id).name} (id : #{post.user_id}) <br> Msg : #{post.msg} <br> Created-at : #{post.created_at} <br> Updated-at : #{post.updated_at}
        %p
    .col
      = link_to 'Post', :new_post, class: 'btn btn-outline-primary'

